@model IEnumerable<Questionnaire.WEB.Models.Entities.FormDataVM>

@{
    ViewBag.Title = "Вопрос ответ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="block">
    <div class="row">
        <div class="col-lg-3 col-md-3">
            <h4>Разделы</h4>
            <hr />
            <ul class="nav flex-column">
                @foreach (var section in ViewBag.Sections)
                {
                    string name = section.Name;
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("QuestionAnswers", "FormData", new { questionTypeId = section.Id })">@name</a>
                    </li>
                }
            </ul>
        </div>
        <div class="col-lg-9 col-md-9">
            @Html.AntiForgeryToken()
            <input type="hidden" name="FormId" id="FormId" value="@ViewBag.FormId" />
            <h2>@ViewBag.Section</h2>

            <div id="found-items-area"></div>

            <div id="attached-items" class="justify-content-center">
                @if (!(Model.Count() <= 0))
                {
                    foreach (var question in Model)
                    {
                        <form class="was-validated">
                            <div class="item-info">
                                <b>@question.QuestionName</b>
                                <hr />
                            </div>
                            <div class="row">
                                @foreach (var option in question.Options)
                                {
                                    if (option.MultipleAnswer == true)
                                    {
                                        <div class="col-lg-6 col-md-8">
                                            @if (option.Name.Equals("Другое") || option.Name.Equals("сом") || option.Name.Equals("Другое огнестрельное оружие"))
                                            {
                                                <div class="option-block">
                                                    <div class="pretty p-default">
                                                        <input class="option-with-text" type="checkbox" name="option" value="@option.Id" />
                                                        <div class="state p-success">
                                                            <label>@option.Name</label>
                                                        </div>
                                                    </div>
                                                    <input type="text" class="form-control option-text" style="width:50%;" placeholder="Другое - Уточнить!" />
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="option-block">
                                                    <div class="pretty p-default">
                                                        <input class="option" type="checkbox" name="option" value="@option.Id" />
                                                        <div class="state p-success">
                                                            <label>@option.Name</label>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="col-lg-6 col-md-8">
                                            @if (option.Name.Equals("Другое") || option.Name.Equals("сом") || option.Name.Equals("Другое огнестрельное оружие"))
                                            {
                                                <div class="option-block">
                                                    <div class="pretty p-default p-round">
                                                        <input class="option-with-text" type="radio" name="option" value="@option.Id" />
                                                        <div class="state p-success-o">
                                                            <label>@option.Name</label>
                                                        </div>
                                                    </div>
                                                    <input type="text" class="form-control option-text" style="width:50%;" placeholder="Другое - Уточнить!" />
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="option-block">
                                                    <div class="pretty p-default p-round">
                                                        <input class="option" type="radio" name="option" value="@option.Id" />
                                                        <div class="state p-success-o">
                                                            <label>@option.Name</label>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    }
                                }
                            </div>
                        </form>
                        <hr />
                    }
                }
            </div>
            <div class="form-group">
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-success" id="save-btn" onclick="saveForm()"><i class="fa fa-save" aria-hidden="true" title="Сохранить" data-toggle="tooltip" data-placement="top"></i> Сохранить</button>
                    <a href="@Url.Action("Index", "Form")" class="btn btn-info" name="backButton" id="backButton"><i class="fa fa-arrow-left" aria-hidden="true" title="Назад" data-toggle="tooltip" data-placement="top"></i> Назад</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
<script>
    //markoption-blockAsSelected();
</script>
}