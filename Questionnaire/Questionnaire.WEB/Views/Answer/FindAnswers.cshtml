@model IEnumerable<Questionnaire.WEB.Models.Entities.AnswerVM>
<div id="found-items" class="row">
    @if (Model.Count() <= 0)
    {
        <p>Нет результатов</p>
    }
    else
    {
        <table class="table table-hover table-responsive table-striped" id="found-items-list">
            <caption>Список найденных ответов</caption>
            <thead>
                <tr>
                    <th>Действие</th>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Questionnaire.WEB.Models.Entities.AnswerVM answer in Model)
                {
                <tr id="@answer.Id">
                    <td>
                        <button class="btn btn-primary" type="button" onclick="attachAnswer('@answer.Id')">Добавить</button>
                    </td>
                    <td class="model">@Html.DisplayFor(model => answer.Name)</td>
                    <td class="type"></td>
                    <td class="name"></td>
                    <td class="number"></td>
                </tr>
                }
            </tbody>
        </table>
    }
</div>